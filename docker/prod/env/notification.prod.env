# ========================
# Notification Service - prod env
# ========================

# Database
DATABASE_URL=ecto://user:password@db-host:5432/whispr_notification_prod

# Redis
REDIS_HOST=redis-host
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Phoenix / HTTP
HTTP_PORT=4000
GRPC_PORT=50052
METRICS_PORT=9090

SECRET_KEY_BASE=CHANGEMOI_MIN_64_CHARS
PHX_HOST=0.0.0.0

# Environnement
MIX_ENV=prod
LOG_LEVEL=info

# Notifications
FCM_PROJECT_ID=
FCM_CREDENTIALS_JSON=
APNS_TEAM_ID=
APNS_KEY_ID=
APNS_AUTH_KEY_PATH=
APNS_ENV=production

# Observabilité
TELEMETRY_ENABLED=true
JAEGER_ENDPOINT=

# Déploiement / BEAM
RELEASE_NAME=whispr-notification
RELEASE_VERSION=latest
NODE_NAME=notification@${HOSTNAME}
ERLANG_COOKIE=changeme_cookie

# Monitoring
HEALTH_CHECK_PATH=/api/v1/health
METRICS_PATH=/metrics

# Traefik / domaine
DOMAIN=whispr.local

# Ressources
CPU_LIMIT=1.0
MEMORY_LIMIT=1G
CPU_RESERVATION=0.5
MEMORY_RESERVATION=512M

# Scaling
REPLICAS=2
